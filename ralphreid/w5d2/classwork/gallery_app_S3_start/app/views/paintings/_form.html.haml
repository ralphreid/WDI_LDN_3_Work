= form_for [@gallery, @painting] do |f|

  - if @painting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@painting.errors.count, "error")} prohibited this painting from being saved:"
      %ul
        - @painting.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :artist
    = f.text_field :artist
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :price
    = f.number_field :price
  = image_tag @painting.image_url(:thumb) if @painting.image?
  .field
    = f.label :image
    = f.file_field :image
  .field
    = f.label :remote_image_url, 'or add by URL'
    = f.url_field :remote_image_url
  .actions
    = f.submit 'Save'
