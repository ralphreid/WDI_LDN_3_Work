%h1 Editing #{@user.name}
= form_for @user do |f|

  - if @user.errors.any?
    .error-messages
      %h2 Form is invalid
      %ul
        - for message in @user.errors.full_messages
          %li= message

  .field
    = f.label :role
    %br/
    = f.text_field :role, :autofocus => true
  .actions
    = f.submit