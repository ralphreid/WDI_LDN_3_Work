  - @authors.each do |author|
    %tr
      %td= author.full_name
      %td= author.bio
      %td= author.birthdate
      %td= link_to 'Show', author
      %td= link_to 'Edit', edit_author_path(author)
      %td= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }
