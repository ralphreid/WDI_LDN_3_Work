<h1><%= @planet.name %></h1>

<% if @planet.image.present? %>
  <%= image_tag @planet.image, class: "large-image" %>
<% end %>

<table>
  <tr>
    <th>Orbit</th>
    <td><%= @planet.orbit %> AU</td>
  </tr>

  <tr>
    <th>Diameter</th>
    <td><%= @planet.diameter %> Earth Diameters</td>
  </tr>

  <tr>
    <th>Mass</th>
    <td><%= @planet.mass %> Earth Masses</td>
  </tr>

  <tr>
    <th>Type</th>
    <td><%= @planet.planet_type %> Earth Masses</td>
  </tr>

  <tr>
    <th>Moons</th>
    <td><%= @planet.moons %></td>
  </tr>

  <tr>
    <th>Rings?</th>
    <td><%= @planet.rings %></td>
  </tr>

</table>

<nav>
  <%= link_to "Destroy this Planet", @planet, :method => :delete, :confirm => "Whoa there! Are sure you want to destroy #{@planet.name}?" %>
  |
  <%= link_to "Edit this planet", edit_planet_path(@planet) %>


</nav>