<h3>Add a new Movie</h3>
<% if @movie["id"]%>
  <form method="post" action="/movies/<%= @movie["id"]%>/update">
<% else %>
  <form method="post" action="/new_movie">
<% end %>
  Title: <input type="text" name="title" value="<%= @movie["title"]%>" />
  Year: <input type="number" name="year" value="<%= @movie["year"]%>"/>
  Rated: <input type="number" name="rated" value="<%= @movie["rated"]%>"/>
  Poster: <input type="URL" name="poster" value="<%= @movie["poster"]%>"/>
  Director: <input type="text" name="director" value="<%= @movie["director"]%>"/>
  
  Related Actors: <select>
    
    <% @actors.each do |actor| %>
      <option name='actor_id' value="<%= actor["id"].to_i %>">
        <%= "#{actor["first_name"]} #{actor["last_name"]}" %>
      </option>
    <% end %>
    
  </select> 
    
  </select><input type="submit">
</form>